<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/bubbleColorSelectorTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Select a Bubble Color:"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/greenBubbleSelectorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Green"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/blueBubbleSelectorButton"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/blueBubbleSelectorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Blue"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.503"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/redBubbleSelectorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Red"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/blueBubbleSelectorButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.503"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/greenBubbleEffectDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nice and slow, for the weak"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/greenBubbleSelectorButton"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/greenBubbleSelectorButton"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintRight_toRightOf="@+id/greenBubbleSelectorButton" />

    <TextView
        android:id="@+id/blueBubbleEffectDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Normal difficulty"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/blueBubbleSelectorButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/redBubbleEffectDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Impossible"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginEnd="0dp"
        app:layout_constraintRight_toRightOf="@+id/redBubbleSelectorButton"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/redBubbleSelectorButton"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/redBubbleSelectorButton"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginRight="0dp" />

</android.support.constraint.ConstraintLayout>